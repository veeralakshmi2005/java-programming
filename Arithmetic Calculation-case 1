import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int a=sc.nextInt();
        int b=sc.nextInt();
        char ch=sc.next().charAt(0);
        switch(ch){
                case '+':
                float c=a+b;
                System.out.printf("Addition of two number is %.1f",c);
                break;
                case '-':
                float e=a-b;
                System.out.printf("Subtraction of two number is %.1f",e);
                break;
                case '*':
                float f=a*b;
                System.out.printf("Multiplication of two number is %.1f",f);
                break;
                case '/':
                float g=a/b;
                System.out.printf("Division of two number is %.1f",g);
                break;
                case '%':
                float h=a%b;
                System.out.printf("Division of two number is %.1f",h);
                break;
            default:
                System.out.println("Invalid Input");
        }
        /* Enter your code here. Read input from STDIN. Print output to STDOUT. Your class should be named Solution. */
    }
}
