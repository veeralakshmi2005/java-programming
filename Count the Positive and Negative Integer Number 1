import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        int[] a=new int[n];
        for(int i=0;i<n;i++){
            a[i]=sc.nextInt();
        }
        int pos=0;
        int neg=0;
        for(int i=0;i<n;i++){
            if(a[i]>0){
                pos++;
            }
            else{
                neg++;
            }
        }
        System.out.printf("Count of Positive Integer is %.2f\n",(float)pos);
        System.out.printf("Count of Negative Integer is %.2f",(float)neg);
        /* Enter your code here. Read input from STDIN. Print output to STDOUT. Your class should be named Solution. */
    }
}
