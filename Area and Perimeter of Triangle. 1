import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int a=sc.nextInt();
        int b=sc.nextInt();
        int c=sc.nextInt();
        int d=sc.nextInt();
        int e=sc.nextInt();
        float f=(float)1/2*a*b;
        float h=c+d+e;
        System.out.printf("Area of Triangle is %.2f\n",f);
        System.out.printf("Perimeter of Triangle is %.2f",h);
        /* Enter your code here. Read input from STDIN. Print output to STDOUT. Your class should be named Solution. */
    }
}
